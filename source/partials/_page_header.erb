<div class="page-header">
  <div class="site-wrap">
    <% if current_page.data.icon %>
      <%= inline_svg("icons/#{current_page.data.icon}.svg", class: "icon page-header__icon") %>
    <% end %>
    <h1><%= current_page.data.title %></h1>
    <%# We either use the subtitle from the frontmatter or instance var (necessary when using proxies and the subtitle contains locals) %>
    <h2><%= current_page.data.subtitle || @subtitle %></h2>
    <% if current_page.data.screenshot %>
      <img class="page-header__image" src="/images/screenshots/<%= current_page.data.title.downcase %>/header.png">
    <% end %>
  </div>
  <% if show_nav_arrows %>
    <a href="<%= prev_product_path %>" class="page-header__nav page-header__nav--prev">
      <span><%= prev_product_name %></span>
      <%= inline_svg("icons/left-arrow.svg", class: "icon icon--medium icon--white") %>
    </a>
    <a href="<%= next_product_path %>" class="page-header__nav page-header__nav--next">
      <span><%= next_product_name %></span>
      <%= inline_svg("icons/right-arrow.svg", class: "icon icon--medium icon--white") %>
    </a>
  <% end %>
</div>