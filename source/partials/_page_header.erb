<div class="page-header">
  <div class="site-wrap">
    <% if current_page.data.icon %>
      <img class="icon page-header__icon" src="/images/icons/<%= current_page.data.icon %>.svg">
    <% end %>
    <h1><%= current_page.data.title %></h1>
    <h2><%= current_page.data.subtitle %></h2>
    <% if current_page.data.screenshot %>
      <img class="page-header__image" src="/images/<%= current_page.data.screenshot %>">
    <% end %>
  </div>
</div>