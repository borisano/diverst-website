<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= current_page.data.title %> | Diverst</title>
    <meta name="description" content="<%= current_page.data.meta_description %>">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= favicon_tag '/favicon.png' %>
    <%= stylesheet_link_tag "main" %>
    <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Roboto:400,500" %>
    <%= partial :trackers_head %>
  </head>
  <body class="<%= page_classes %>">

    <%= partial :product_nav %>
    <%= partial :mobile_nav %>
    <%= partial :nav %>
    <div class="overlay"></div>

    <div id="page-wrap">
      <%= partial :page_header, locals: { show_nav_arrows: false } %>
      <%= yield %>
      <%= partial :sign_up %>
      <%= partial :footer %>
    </div>

    <%= partial :trackers_body %>
    <%= javascript_include_tag 'main' %>
    <%= yield_content :page_scripts %>

  </body>
</html>
